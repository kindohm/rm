  dg6 = degradeBy 0.6
  dg7 = degradeBy 0.7
  dg8 = degradeBy 0.8
  dg9 = degradeBy 0.9
  dg10 = degradeBy 1.0
  sb = sometimesBy
  ssb = someCyclesBy
  shift x = (1 ~>) $ x
  shiftBy num x = (num ~>) $ x
  x pat = ccv pat # ccn 1 # harmor # midichan 0
  y pat = ccv pat # ccn 2 # harmor # midichan 0
