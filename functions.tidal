  atk pat = ccv pat # ccn 10 # harmor # midichan 0
  dec pat = ccv pat # ccn 11 # harmor # midichan 0
  sus pat = ccv pat # ccn 12 # harmor # midichan 0
  harm pat = ccv pat # ccn 13 # harmor # midichan 0
